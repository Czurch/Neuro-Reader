{
    "name" : "Neuro-Reader",
    "description": "Make webpages easier to read for neuro-divergent individuals",
    "version" : "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon" : {
            "16" : "/images/neuro-reader16.png",
            "32" : "/images/neuro-reader32.png",
            "48" : "/images/neuro-reader48.png",
            "128" : "/images/neuro-reader128.png"
        }
    },
    "icons": {
        "16" : "/images/neuro-reader16.png",
        "32" : "/images/neuro-reader32.png",
        "48" : "/images/neuro-reader48.png",
        "128" : "/images/neuro-reader128.png"        
    }
}